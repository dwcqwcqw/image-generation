# Frontend Environment Variables

# RunPod API Configuration (for backend API routes)
RUNPOD_API_KEY=your_runpod_api_key_here
RUNPOD_ENDPOINT_ID=your_runpod_endpoint_id_here

# RunPod API Configuration (for direct frontend calls in production)
NEXT_PUBLIC_RUNPOD_API_KEY=your_runpod_api_key_here
NEXT_PUBLIC_RUNPOD_ENDPOINT_ID=your_runpod_endpoint_id_here

# Public API URL
# For local development, leave as default to use local API routes
# For production static deployment, set to RunPod endpoint or leave empty
NEXT_PUBLIC_API_URL=

# Cloudflare R2 Configuration (for backend storage)
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key_here
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key_here
CLOUDFLARE_R2_BUCKET=your_bucket_name_here
CLOUDFLARE_R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Cloudflare R2 Configuration (if needed for frontend uploads)
NEXT_PUBLIC_CLOUDFLARE_R2_BUCKET=your_r2_bucket_name
NEXT_PUBLIC_CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com 